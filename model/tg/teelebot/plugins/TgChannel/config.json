# TgChannel Plugin Configuration

{
  "api_port": 8089,
  "download_dir": "./download",
  "state_file": "",
  "max_file_size_mb": 20,
  "auto_cleanup_days": 7,
  "supported_types": [
    "text",
    "photo",
    "video", 
    "document",
    "audio",
    "voice"
  ],
  "file_extensions": {
    "photo": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
    "video": [".mp4", ".mov", ".mkv", ".avi", ".webm"],
    "audio": [".mp3", ".wav", ".ogg", ".m4a"],
    "document": [".pdf", ".doc", ".docx", ".txt", ".zip"]
  },
  "logging": {
    "level": "INFO",
    "detailed": false
  }
}